{
  "manifest_version": 3,
  "name": "Golf Course Search Extension",
  "version": "1.0.0",
  "description": "楽天GORAのゴルフ場を難易度、コースレート、スロープレート、Redティー総飛距離で検索できる拡張機能",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://app.rakuten.co.jp/*",
    "https://gora.golf.rakuten.co.jp/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Golf Course Search"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon.svg"
  }
}
